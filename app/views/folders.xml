<Alloy>
	<Collection id="device" src="Device" instance="true"/>
	<!--
		This view wraps all of the child views/lists etc. Creates a base layout, vertically aligned.
	-->
	<View id="wrapper" class="deviceContainerView">
		<ScrollableView id="scrollableView" showPagingControl="true">
			<ListView id="favoritesListView" class="deviceListView" defaultItemTemplate="lightTemplate">
		       	<ListSection>
    				<ListItem  template="infoLblTemplate" infoLbl:text="Add favorites by going to edit mode on the right menu"></ListItem>
    				<ListItem template="infoLblTemplate" infoLbl:text="Swipe left and right to change between views"></ListItem>
        		</ListSection>
				<RefreshControl id="refreshControlFav" platform="ios" onRefreshstart="refresh" />
				<Templates>
					<ItemTemplate class="deviceItem" name="infoLblTemplate">
	                    <Label bindId="infoLbl" class="infoLbl" />
	                </ItemTemplate>
					<ItemTemplate class="deviceItem" name="groupLblTemplate">
	                    <Label bindId="groupLbl" class="groupLbl" />
	                </ItemTemplate>
	            	<ItemTemplate class="deviceItem" name="sceneTemplate">
	                    <View class="horizontal sceneContainer">
	                        <Label bindId="sceneLbl" class="sceneLbl"/>
	                        <Button bindId="sceneBtnOn" class="sceneBtn" onClick="sceneOnBtn"/>
	                        <Button bindId="sceneBtnOff" class="sceneBtn" onClick="sceneOffBtn"/>
	                    </View>
	            	</ItemTemplate>
					<ItemTemplate class="deviceItem" id="light" name="lightTemplate">
	                    <View>
	                        <Button bindId="btn" class="btn" onClick="btnClick" />
	                        <View>
	                            <Slider bindId="slider" class="slider" onStop="sendSliderVal"/>
	                            <Label bindId="sliderLbl" class="sliderLbl" />
	                        </View>
	                    </View>
					</ItemTemplate>
				</Templates>
			</ListView>
			<ListView id="lightsListView" class="deviceListView" defaultItemTemplate="lightTemplate">
				<ListSection>
    				<ListItem template="groupLblTemplate" groupLbl:text="Add Some Lights"></ListItem>
        		</ListSection>
				<RefreshControl id="refreshControlLight" platform="ios" onRefreshstart="refresh" />
				<HeaderView>
					<TextField id="sfLights" class="searchField"></TextField>
				</HeaderView>
				<Templates>
					<ItemTemplate class="deviceItem" name="groupLblTemplate">
                        <Label bindId="groupLbl" class="groupLbl" />
                    </ItemTemplate>
	            	<ItemTemplate class="deviceItem" name="sceneTemplate">
	                    <View class="horizontal sceneContainer">
	                        <Label bindId="sceneLbl" class="sceneLbl"/>
	                        <Button bindId="sceneBtnOn" class="sceneBtn" onClick="sceneOnBtn"/>
	                        <Button bindId="sceneBtnOff" class="sceneBtn" onClick="sceneOffBtn"/>
	                    </View>
	            	</ItemTemplate>
					<ItemTemplate class="deviceItem" id="light" name="lightTemplate">
	                    <View>
	                        <Button bindId="btn" class="btn" onClick="btnClick" />
	                        <View>
	                            <Slider bindId="slider" class="slider" onStop="sendSliderVal"/>
	                            <Label bindId="sliderLbl" class="sliderLbl" />
	                        </View>
	                    </View>
					</ItemTemplate>
				</Templates>
            </ListView>
            <ListView id="scenesListView" class="deviceListView" defaultItemTemplate="lightTemplate">
            	<ListSection>
    				<ListItem template="groupLblTemplate" groupLbl:text="Add Some Scenes"></ListItem>
        		</ListSection>
            	<RefreshControl id="refreshControlScene" platform="ios" onRefreshstart="refresh" />
            	<HeaderView><TextField id="sfScenes" class="searchField"></TextField></HeaderView>
				<Templates>
					<ItemTemplate class="deviceItem" name="groupLblTemplate">
	                        <Label bindId="groupLbl" class="groupLbl" />
                    </ItemTemplate>
	            	<ItemTemplate class="deviceItem" name="sceneTemplate">
	                    <View class="horizontal sceneContainer">
	                        <Label bindId="sceneLbl" class="sceneLbl"/>
	                        <Button bindId="sceneBtnOn" class="sceneBtn" onClick="sceneOnBtn"/>
	                        <Button bindId="sceneBtnOff" class="sceneBtn" onClick="sceneOffBtn"/>
	                    </View>
	            	</ItemTemplate>
					<ItemTemplate class="deviceItem" id="light" name="lightTemplate">
	                    <View>
	                        <Button bindId="btn" class="btn" onClick="btnClick" />
	                        <Button bindId="btn" class="btn" />
	                        <View>
	                            <Slider bindId="slider" class="slider" onStop="sendSliderVal"/>
	                            <Slider bindId="slider" class="slider"/>
	                            <Label bindId="sliderLbl" class="sliderLbl" />
	                        </View>
	                    </View>
					</ItemTemplate>
				</Templates>
            </ListView>
            <ListView id="sensorsListView" class="deviceListView" defaultItemTemplate="sensorTemplate">
            	<ListSection>
    				<ListItem template="groupLblTemplate" groupLbl:text="Add Some Sensors"></ListItem>
        		</ListSection>
            	<RefreshControl id="refreshControlSensor" platform="ios" onRefreshstart="refresh" />
            	<HeaderView><TextField id="sfSensors" class="searchField"></TextField></HeaderView>
				<Templates>
					<ItemTemplate class="deviceItem" name="groupLblTemplate">
	                        <Label bindId="groupLbl" class="groupLbl" />
                    </ItemTemplate>
	            	<ItemTemplate class="deviceItem" name="sceneTemplate">
	                    <View class="horizontal sceneContainer">
	                        <Label bindId="sceneLbl" class="sceneLbl"/>
	                        <Button bindId="sceneBtnOn" class="sceneBtn" onClick="sceneOnBtn"/>
	                        <Button bindId="sceneBtnOff" class="sceneBtn" onClick="sceneOffBtn"/>
	                    </View>
	            	</ItemTemplate>
					<ItemTemplate class="deviceItem" id="light" name="lightTemplate">
	                    <View>
	                        <Button bindId="btn" class="btn" onClick="btnClick" />
	                        <Button bindId="btn" class="btn" />
	                        <View>
	                            <Slider bindId="slider" class="slider" onStop="sendSliderVal"/>
	                            <Slider bindId="slider" class="slider"/>
	                            <Label bindId="sliderLbl" class="sliderLbl" />
	                        </View>
	                    </View>
					</ItemTemplate>
            		<ItemTemplate class="deviceItem" name="sensorTemplate">
	                    <View class="horizontal sensorContainer">
	                        <Label bindId="sensorLbl" class="sceneLbl"/>
	                        <Label bindId="sensorLblOn" />
	                        <Label bindId="sensorLblOff" />
	                    </View>
	            	</ItemTemplate>
				</Templates>
            </ListView>
        </ScrollableView>
	</View>
</Alloy>
