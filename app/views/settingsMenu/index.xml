<Alloy>
	<!-- create global instance of collection we'll bind -->
	<Collection id="d" src="Device" />
	<Collection src="DeviceInFolder" />
	<Collection src="DeviceInView" />
	<NavigationWindow platform="ios" id="navWin">
		<Window>
			<LeftNavButton>
				<Button onClick="closeSettingsBtnClicked">Close</Button>
			</LeftNavButton>
			<Require id="indexList" src="settingsMenu/indexList"/>
		</Window>
	</NavigationWindow>

	<Window title="Views" navBarHidden="false" platform="android" id="win">
		<Menu>
			<MenuItem  title="Close" onClick="closeSettingsBtnClicked" showAsAction="Ti.Android.SHOW_AS_ACTION_ALWAYS" />
		</Menu>
		<Label class="label-H5" textAlign="center">Choose a view to add lights, scenes, etc.</Label>
		<Require id="indexList" src="settingsMenu/indexList" />
	</Window>
</Alloy>