<Alloy>
	<TableView class="tableview-form noScroll bgroundColor" onClick="loadFolders">
		<TableViewSection>
			<TableViewRow class="row-option" viewName="Favorites" hasChild="true">
				<View class="view-form-icon-title-row">
					<Label class="heartIcon icon"></Label>
					<Label class="title">Favorites</Label>
				</View>
			</TableViewRow>
			<TableViewRow class="row-option" viewName="Lights" hasChild="true">
				<View class="view-form-icon-title-row">
					<Label class="lightIcon icon"></Label>
					<Label class="title">Lights</Label>
				</View>
			</TableViewRow>
			<TableViewRow class="row-option" viewName="Scenes" hasChild="true">
				<View class="view-form-icon-title-row">
					<Label class="sceneIcon icon"></Label>
					<Label class="title">Scenes</Label>
				</View>
			</TableViewRow>
		</TableViewSection>
	</TableView>
</Alloy>

