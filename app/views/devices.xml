<Alloy>
    <Collection id="device" src="Device" instance="true"/>
    <View class="deviceContainerView">
        <View id="refreshBtnView" platform="android">
            <Button id="refreshBtn" icon="fa-refresh" platform="android"/>
            <Widget id="fa" src="com.mattmcfarland.fontawesome" platform="android"/>
        </View>
        <ScrollableView id="scrollableView" showPagingControl="true">
            <ListView id="favoritesListView" class="deviceListView" defaultItemTemplate="light">
                <Templates>
                    <ItemTemplate name="light">
                        <View class="container">
                            <Button bindId="btn" class="btn" onClick="btnClick" />
                            <View>
                                <Slider bindId="slider" class="slider" onChange="updateSliderLbl" onStop="sendSliderVal" platform="ios"/>
                                <Slider bindId="slider" class="slider" onStop="sendSliderVal" platform="android"/>
                                <Label bindId="sliderLbl" class="sliderLbl" />
                            </View>
                        </View>
                    </ItemTemplate>
                    <ItemTemplate name="groupLbl">
                            <Label bindId="groupLbl" class="groupLbl" />
                    </ItemTemplate>
                    <ItemTemplate name="scene">
                        <View class="container horizontal sceneContainer">
                            <Label bindId="sceneLbl" class="sceneLbl"/>
                            <Button bindId="sceneBtnOn" class="sceneBtn" onClick="btnClick"/>
                            <Button bindId="sceneBtnOff" class="sceneBtn" onClick="btnClick"/>
                        </View>
                    </ItemTemplate>
                </Templates>
                <RefreshControl id="refreshControlFav" platform="ios" />
                <ListSection dataFilter="favFilter"
                             dataFunction="updateUI" dataTransform="transformFunction"
                             dataCollection="$.device">
                    <ListItem template="{template}" class="deviceItem" modelId="{modelId}" address="{address}" itemType="{type}" sortId="{sortId}"
                              btn:title="{displayName}"
                              slider:value="{sliderVal}" sliderLbl:text="{sliderVal}"
                              groupLbl:text="{displayName}"
                              sceneLbl:text="{displayName}" sceneBtnOn:title="On"
                              sceneBtnOff:title="Off" />
                </ListSection>
            </ListView>
            <ListView id="lightsListView" class="deviceListView" defaultItemTemplate="light">
                <Templates>
                    <ItemTemplate name="light">
                        <View class="container" onClick="btnClick">
                            <Button id="btn" bindId="btn" class="btn"/>
                            <View>
                                <Slider bindId="slider" class="slider" onChange="updateSliderLbl" onStop="sendSliderVal" platform="ios"/>
                                <Slider bindId="slider" class="slider" onStop="sendSliderVal" platform="android"/>
                                <Label bindId="sliderLbl" class="sliderLbl"/>
                            </View>
                        </View>
                    </ItemTemplate>
                    <ItemTemplate name="groupLbl">
                        <Label bindId="groupLbl" class="groupLbl"/>
                    </ItemTemplate>
                    <ItemTemplate name="scene">
                        <View class="container horizontal sceneContainer">
                            <Label bindId="sceneLbl" class="sceneLbl"/>
                            <Button bindId="sceneBtnOn" class="sceneBtn" onClick="btnClick"/>
                            <Button bindId="sceneBtnOff" class="sceneBtn" onClick="btnClick"/>
                        </View>
                    </ItemTemplate>
                </Templates>
                <RefreshControl id="refreshControlLights" platform="ios" />
                <ListSection id="deviceListSectionLights" dataFilter="lightFilter"
                             dataTransform="transformFunction"
                             dataCollection="$.device">
                    <ListItem template="{template}" class="deviceItem" modelId="{modelId}" address="{address}"
                              itemType="{type}" sortId="{sortId}"
                              btn:title="{displayName}"
                              slider:value="{sliderVal}" sliderLbl:text="{sliderVal}"
                              groupLbl:text="{displayName}"
                              sceneLbl:text="{displayName}" sceneBtnOn:title="On"
                              sceneBtnOff:title="Off"/>
                </ListSection>
            </ListView>
            <ListView id="scenesListView" class="deviceListView" defaultItemTemplate="light">
                <Templates>
                    <ItemTemplate name="light">
                        <View class="container" onClick="btnClick" >
                            <Button id="btn" bindId="btn" class="btn"/>
                            <View>
                                <Slider bindId="slider" class="slider" onChange="updateSliderLbl" onStop="sendSliderVal" platform="ios"/>
                                <Slider bindId="slider" class="slider" onStop="sendSliderVal" platform="android"/>
                                <Label bindId="sliderLbl" class="sliderLbl"/>
                            </View>
                        </View>
                    </ItemTemplate>
                    <ItemTemplate name="groupLbl">
                        <Label bindId="groupLbl" class="groupLbl"/>
                    </ItemTemplate>
                    <ItemTemplate name="scene">
                        <View class="container horizontal sceneContainer">
                            <Label bindId="sceneLbl" class="sceneLbl"/>
                            <Button bindId="sceneBtnOn" class="sceneBtn" onClick="btnClick"/>
                            <Button bindId="sceneBtnOff" class="sceneBtn" onClick="btnClick"/>
                        </View>
                    </ItemTemplate>
                </Templates>
                <RefreshControl id="refreshControlScenes" platform="ios" />
                <ListSection id="deviceListSectionScenes" dataFilter="sceneFilter"
                             dataTransform="transformFunction"
                             dataCollection="$.device">
                    <ListItem template="{template}" class="deviceItem" modelId="{modelId}" address="{address}"
                              itemType="{type}" sortId="{sortId}"
                              btn:title="{displayName}"
                              slider:value="{sliderVal}" sliderLbl:text="{sliderVal}"
                              groupLbl:text="{displayName}"
                              sceneLbl:text="{displayName}" sceneBtnOn:title="On"
                              sceneBtnOff:title="Off"/>
                </ListSection>
            </ListView>
        </ScrollableView>
    </View>
</Alloy>